<configuration>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <File>./LOGS/ray-tracer.log</File>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%-5level] %msg%n</pattern>
        </encoder>
    </appender>
    <root level="info">
        <appender-ref ref="FILE" />
    </root>
</configuration>
